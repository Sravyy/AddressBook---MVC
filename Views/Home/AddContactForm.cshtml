
@{
  Layout = "_Layout";
}
<div class="container">
  <div class="jumbotron">
  <h1>Address Book</h1>
  </div>
  <h1>Add New Contact</h1>
  <br>
  <form action="/contact/new" method="post">
    Full Name : <input type="text" name="full-name" placeholder="full name" required>
    <br>
    <br>
    Contnact No : <input type="number" name="contanct-no" placeholder="Number">
    <br>
    <br>
    Address : <input type="text" name="address" placeholder="Address with Zipcode">
    <br>
    <br>
    <button type="submit" class="btn btn-danger" name="button">Add Contact</button>
  </form>
  <br>
  <p><a href="/">Back Home</a></p>
</div>
