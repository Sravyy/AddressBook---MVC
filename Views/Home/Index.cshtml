@{
  Layout = "_Layout";
}

<h1>Address Book</h1>
<br>
<h2>Contanct List</h2>

@if (@Model.Count == 0)
{
  <h3>No Contacts have been added yet!</h3>
}
else
{
  <ol>
    @foreach(var contact in Model)
    {
      <li><a href='/contacts/@contact.GetId()'>@contact.GetName()</a></li>
    }
  </ol>
}

<br>
<h3><a href="/addContact">Add a New Contact</a></h3>
<br>
<form  action="/contact/clearAll" method="post">
  <button type="submit" name="button">Clear the List</button>
</form>
