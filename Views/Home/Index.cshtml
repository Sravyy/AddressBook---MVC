@{
Layout = "_Layout";
}
<div class="container">
<div class="jumbotron">
<h1>Address Book</h1>
</div>
<br>
<h2>Contact List :</h2>

@if (@Model.Count == 0)
{
<h3>No Contacts have been added yet!</h3>
}
else
{
<ol>
  @foreach(var contact in Model)
  {
    <li><a href='/contacts/@contact.GetId()'>@contact.GetName()</a></li>
  }
</ol>
<br>
<form  action="/contact/clearAll" method="post">
  <button type="submit" class="btn btn-danger" name="button">Clear the List</button>
</form>
}

<br>
<h3><a href="/addContact">Add a New Contact</a></h3>
<br>
</div>
